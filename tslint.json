{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "no-console": false,
    "no-namespace": false,
    "ordered-imports": [false],
    "object-literal-sort-keys": [false],
    "array-type": [false, "array-for-simple-types"],
    "jsx-no-lambda": false
  },
  "jsRules": {
    "no-console": false,
    "no-namespace": false,
    "ordered-imports": [false],
    "object-literal-sort-keys": [false],
    "array-type": [false, "array-for-simple-types"],
    "jsx-no-lambda": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
